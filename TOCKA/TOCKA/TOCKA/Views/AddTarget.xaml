<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TOCKA.Views.AddTarget"
             Title="Add target"
             BackgroundColor="White">
    <StackLayout
        Margin="20,30,20,0">
        <Label
            Text="Name your target" />
        <Entry
            HorizontalOptions="Fill"
            Placeholder="Name" />
        <Button
            HorizontalOptions="Start"
            Text="+ Add task"
            Clicked="AddTaskClick" />

        <StackLayout>
            <Button Text="Save" />
        </StackLayout>

    </StackLayout>


</ContentPage>