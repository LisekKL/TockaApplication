<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage 
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TOCKA.Views.MenuPage"
             xmlns:local="clr-namespace:TOCKA;assembly=TOCKA"
             xmlns:views="clr-namespace:TOCKA.Views;assembly=TOCKA">
  <MasterDetailPage.Master>
    <ContentPage
      Title="MENU">
      <StackLayout VerticalOptions="FillAndExpand">
        <Button Text="My Account"/>
        <Button Text="Add target"/>
        <Button Text="List of targets"/>
        <Button Text="Leaderboards"/>
        <Button Text="Logout"/>

      </StackLayout>

    </ContentPage>

  </MasterDetailPage.Master>

  <MasterDetailPage.Detail>
    <NavigationPage>
    <views:FrontPage/>
    </NavigationPage>
  </MasterDetailPage.Detail>

</MasterDetailPage>